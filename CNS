#include <ESP8266WiFi.h>
#include "ThingSpeak.h"

const int LM35 = A0;

// WiFi credentials
char ssid[] = "EIPL";
char pass[] = "123456789";

// ThingSpeak credentials
WiFiClient client;
unsigned long myChannelNumber = 3150318;  // ✅ No quotes
const int FieldNumber = 1;
const char * myWriteAPIKey = "YBRNGZ2Z70NJVB8N";

void setup() {
  Serial.begin(115200);
  WiFi.mode(WIFI_STA);
  WiFi.begin(ssid, pass);
  Serial.print("Connecting to WiFi");

  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.print(".");
  }

  Serial.println("\nConnected to WiFi");
  ThingSpeak.begin(client);
}

void loop() {
  int ADC = analogRead(LM35);
  float voltage = ADC * (3.3 / 1023.0); // 3.3V reference for NodeMCU
  float temp = voltage * 100.0;         // 10mV/°C from LM35

  Serial.print("Temperature = ");
  Serial.print(temp);
  Serial.println(" °C");

  int statusCode = ThingSpeak.writeField(myChannelNumber, FieldNumber, temp, myWriteAPIKey);

  if (statusCode == 200) {
    Serial.println("Channel update successful.");
  } else {
    Serial.print("Problem updating channel. HTTP error code ");
    Serial.println(statusCode);
  }

  delay(15000); // 15 seconds (ThingSpeak rate limit)
}
